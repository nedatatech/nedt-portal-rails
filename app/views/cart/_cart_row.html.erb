  <%= product.name %>
  <%= form_for order_item, html: {style:'display:inline'}, remote: true do |f| %>    
    <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.submit "Update Quantity", class: "btn btn-primary" %>
    <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.inventory_item.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>    
  <% end %>

