<% if @order.order_items.size == 0 %>
  <p class="text-center">
    There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> and add some items to your cart.
    <td><%= link_to 'Add items', inventory_items_path, method: :get %></td>
  </p>
<% else %>
  <% @order.order_items.each do |order_item| %>  
      <%= render 'cart/cart_row', product: order_item.inventory_item, order_item: order_item, show_total: true %>
      <br>
  <% end %>
  <td><%= link_to 'Add items', inventory_items_path, method: :get %></td>
<% end %>