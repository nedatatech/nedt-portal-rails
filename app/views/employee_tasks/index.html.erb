<p id="notice"><%= notice %></p>

<h1>Employee Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Task Type</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_tasks.each do |employee_task| %>
      <tr>
        <td><%= employee_task.employee.fullname %></td>
        <td><%= employee_task.task_type.name %></td>
        <td><%= employee_task.description %></td>
        <td><%= employee_task.status.name %></td>
        <td><%= link_to 'Show', employee_task %></td>
        <td><%= link_to 'Edit', edit_employee_task_path(employee_task) %></td>
        <td><%= link_to 'Destroy', employee_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

