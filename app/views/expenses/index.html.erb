<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Recurring</th>
      <th>Due</th>
      <th>Pay to</th>
      <th>Pay from</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.owner %></td>
        <td><%= expense.recurring %></td>
        <td><%= expense.due %></td>
        <td><%= expense.pay_to %></td>
        <td><%= expense.pay_from %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.status %></td>
        <td><%= expense.description %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

