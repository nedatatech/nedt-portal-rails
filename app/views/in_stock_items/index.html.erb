<p id="notice"><%= notice %></p>

<h1>In Stock Items</h1>

<table>
  <thead>
    <tr>
      <th>Inventory item</th>
      <th>Item location</th>
      <th>Item quantity</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @in_stock_items.each do |in_stock_item| %>
      <tr>
        <td><%= in_stock_item.inventory_item.name %></td>
        <td><%= in_stock_item.item_location.name %></td>
        <td><%= in_stock_item.item_quantity %></td>
        <td><%= in_stock_item.notes %></td>
        <td><%= link_to 'Show', in_stock_item %></td>
        <td><%= link_to 'Edit', edit_in_stock_item_path(in_stock_item) %></td>
        <td><%= link_to 'Destroy', in_stock_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

