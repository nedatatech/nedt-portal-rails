<p id="notice"><%= notice %></p>

<h1>Item Locations</h1>

<table>
  <thead>
    <tr>
      <th>Truck</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_locations.each do |item_location| %>
      <tr>
        <td><%= item_location.truck %></td>
        <td><%= item_location.name %></td>
        <td><%= item_location.description %></td>
        <td><%= link_to 'Show', item_location %></td>
        <td><%= link_to 'Edit', edit_item_location_path(item_location) %></td>
        <td><%= link_to 'Destroy', item_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item Location', new_item_location_path %>
