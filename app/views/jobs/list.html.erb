<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Date</th>
      <th>Job status</th>
      <th>Scheduled for</th>
      <th>Completed on</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.invoice %></td>
        <td><%= job.date %></td>
        <td><%= job.job_status %></td>
        <td><%= job.scheduled_for %></td>
        <td><%= job.completed_on %></td>
        <td><%= job.customer %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

