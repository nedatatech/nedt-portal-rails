<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Vendor</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>        
        <td><%= order.date %></td>
        <td><%= order.vendor.name %></td>        
        <td><%= order.order_status.name %></td>
        <% case order.order_status.name %>
          <% when "Received" %>
            <td><%= link_to 'Show', order %></td>
          <% else %>
            <td><%= link_to 'Show', order %></td>            
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Receive', order, method: :post, data: { confirm: 'Are you sure?' } %></td>
        <% end %>        
      </tr>
      <tr>
        <td>
          <th>Item</th>
          <th>Quantity</th>
        </td>
        <% order.order_items.each do |order_item| %>
        <tr>
          <td>
          </td>          
          <td>
            <%= order_item.inventory_item.name %>
          </td>
          <td>
            <%= order_item.quantity %>
          </td>
        </tr>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

