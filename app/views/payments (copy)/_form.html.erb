<%= form_with(model: payment, local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :pay_date %>
    <%= form.date_select :pay_date, id: :payment_pay_date %>
  </div>

  <div class="field">
    <%= form.label :paid_to_id %>
    <%= form.collection_select(:paid_to_id, Company.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :paid_from_id %>
    <%= form.collection_select(:paid_from_id, Company.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :pay_type_id %>
    <%= form.collection_select(:pay_type_id, TransType.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :status_id %>
    <%= form.collection_select(:status_id, StatusDatum.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, id: :payment_amount %>
  </div>

  <div class="field">
    <%= form.label :reason %>
    <%= form.text_area :reason, id: :payment_reason %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
