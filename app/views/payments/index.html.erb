<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Pay to</th>
      <th>Pay from</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <% @employee_to = Employee.find_by_id(payment.pay_to_id) %>
        <% @employee_from = Employee.find_by_id(payment.pay_from_id) %>
        <td><%= @employee_to.first_name + " " + @employee_to.last_name %></td>
        <td><%= @employee_from.first_name + " " + @employee_from.last_name %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>