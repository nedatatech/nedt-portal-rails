<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Pay to</th>
      <th>Pay from</th>
      <th>Amount</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.date %></td>
        <td>
          <% if payment.pay_to_type == "company" %>
            <% @company = Company.find_by_id(payment.pay_to_id) %>
            <%= @company.name %>
            <% else %>
          <% @employee = Employee.find_by_id(payment.pay_to_id)%>
            <%= @employee.first_name + " " + @employee.last_name%>
          <% end %>
        </td>        
        <td>
          <% if payment.pay_from_type == "company" %>
            <% @company = Company.find_by_id(payment.pay_from_id) %>
            <%= @company.name %>
          <% else %>
            <% @employee = Employee.find_by_id(payment.pay_from_id)%>
            <%= @employee.first_name + " " + @employee.last_name%>
          <% end %>
        </td>
        <td><%= payment.amount%></td>
        <td><%= payment.reason%></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', payments_select_url %>