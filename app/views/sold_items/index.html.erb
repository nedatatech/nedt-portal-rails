<p id="notice"><%= notice %></p>

<h1>Sold Items</h1>

<table>
  <thead>
    <tr>
      <th>Inventory item</th>
      <th>Invoice</th>
      <th>Price</th>
      <th>Money</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sold_items.each do |sold_item| %>
      <tr>
        <td><%= sold_item.inventory_item %></td>
        <td><%= sold_item.invoice %></td>
        <td><%= sold_item.price %></td>
        <td><%= sold_item.money %></td>
        <td><%= sold_item.notes %></td>
        <td><%= link_to 'Show', sold_item %></td>
        <td><%= link_to 'Edit', edit_sold_item_path(sold_item) %></td>
        <td><%= link_to 'Destroy', sold_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sold Item', new_sold_item_path %>
